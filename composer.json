{
    "name": "aparlay/core",
    "description": "Core functionality share between Alua and Waptap",
    "type": "project",
    "keywords": [
        "aparlay",
        "core"
    ],
    "authors": [
        {
            "name": "Ramin Farmani",
            "email": "ramin@aparlay.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Aparlay\\Core\\": "src",
            "Aparlay\\Core\\Database\\Factories\\": "database/factories/",
            "Aparlay\\Core\\Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aparlay\\Core\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "./vendor/bin/testbench package:test --parallel --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes --config=.php_cs.dist.php"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Aparlay\\Core\\CoreServiceProvider"
            ],
            "aliases": {
                "Core": "Aparlay\\Core\\CoreFacade"
            },
            "dont-discover": [
                "barryvdh/laravel-ide-helper"
            ]
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:aparlay/telescope.git"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-grpc": "^1.35",
        "ext-json": "*",
        "ext-mongodb": "*",
        "ext-openssl": "*",
        "flowjs/flow-php-server": "^1.0",
        "fruitcake/laravel-cors": "^2.0",
        "google/protobuf": "^3.17",
        "grpc/grpc": "^1.38",
        "guzzlehttp/guzzle": "^7.0.1",
        "jenssegers/mongodb": "^3.8",
        "laravel/framework": "^9.2",
        "laravel/horizon": "^5.7",
        "laravel/octane": "^1.0",
        "laravel/slack-notification-channel": "^2.3",
        "laravel/socialite": "^5.2",
        "laravel/tinker": "^2.5",
        "markrogoyski/math-php": "2.*",
        "mostafamaklad/laravel-permission-mongodb": "v4.0.x-dev",
        "pusher/pusher-php-server": "^7.0",
        "spatie/laravel-fractal": "^6.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.9.1",
        "brianium/paratest": "^6.2",
        "spatie/laravel-ignition": "^1.0",
        "fakerphp/faker": "^1.9.1",
        "friendsofphp/php-cs-fixer": "^3.0",
        "laravel/sail": "^1.8",
        "mockery/mockery": "^1.4.2",
        "nunomaduro/collision": "^6.1",
        "phpunit/phpunit": "^9.3",
        "psalm/plugin-laravel": "^1.5",
        "roave/security-advisories": "dev-latest",
        "spatie/laravel-ray": "^1.23",
        "vimeo/psalm": "^4.8",
        "jeroen-g/laravel-packager": "^2.5",
        "laravel/dusk": "^6.15",
        "laravel/envoy": "^2.7",
        "orchestra/testbench": "^7.1"
    }
}
