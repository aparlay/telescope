{
    "name": "aparlay/core",
    "description": "Core functionality share between Alua and Waptap",
    "type": "project",
    "keywords": [
        "aparlay",
        "core"
    ],
    "authors": [
        {
            "name": "Ramin Farmani",
            "email": "ramin@aparlay.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Aparlay\\Core\\": "src",
            "Aparlay\\Core\\Database\\Factories\\": "database/factories/",
            "Aparlay\\Core\\Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aparlay\\Core\\Tests\\": "tests"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "./vendor/bin/testbench package:test --parallel --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes --config=.php_cs.dist.php"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Aparlay\\Core\\CoreServiceProvider"
            ],
            "aliases": {
                "Core": "Aparlay\\Core\\CoreFacade"
            }
        }
    },
    "require": {
        "php": "^8.0",
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-imagick": "*",
        "ext-json": "*",
        "ext-mongodb": "*",
        "ext-openssl": "*",
        "ext-swoole": "*",
        "fideloper/proxy": "^4.4",
        "fruitcake/laravel-cors": "^2.0",
        "guzzlehttp/guzzle": "^7.0.1",
        "jenssegers/mongodb": "^3.8",
        "laravel/framework": "^8.40",
        "laravel/horizon": "^5.7",
        "laravel/octane": "^1.0",
        "laravel/socialite": "^5.2",
        "laravel/telescope": "^4.6",
        "laravel/tinker": "^2.5"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.9.1",
        "facade/ignition": "^2.5",
        "fakerphp/faker": "^1.9.1",
        "laravel/sail": "^1.8",
        "mockery/mockery": "^1.4.2",
        "nunomaduro/collision": "^5.3",
        "phpunit/phpunit": "^9.3",
        "psalm/plugin-laravel": "^1.5",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^4.8",
        "brianium/paratest": "^6.2",
        "orchestra/testbench": "^6.15",
        "spatie/laravel-ray": "^1.23",
        "friendsofphp/php-cs-fixer": "^3.0"
    }
}
